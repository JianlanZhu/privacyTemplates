<!DOCTYPE html>
<html lang="en">
<head>
    <title>Law Enforcement Template</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link rel="stylesheet" type="text/css" href="../../../../css/globalstyling.css">

    <!--Other internal js files for validation and posting-->
    <script src="../../../../js/requestForm/requestFormFunctions.js"></script>
    <script src="../../../../js/requestForm/commonLEOfunctions.js"></script>
    <script src="../../../../js/globalFunctions.js"></script>
    <script type="text/javascript">
        $(function () {
            loadLEONav();
        });
    </script>

    <!-- cdn source for date picker-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/js/bootstrap-datepicker.js"></script>

    <!-- cdn source for time picker-->
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.js"></script>

    <!-- Configuring date pickers and time pickers in the form-->
    <script type="text/javascript">
        $(function () {
            $('.datepicker').datepicker({
                startDate: '0d',
                autoclose: true
            })
                .on('changeDate', function(e) {
                    $('#basicTimeError').hide();
                });
            $('#timePickerStartTime').timepicker({});
            $('#timePickerEndTime').timepicker({});

        });
    </script>

    <!--Other internal js files for validation and posting-->
    <script src="/js/requestForm/requestFormFunctions.js"></script>
    <script src="/js/globalFunctions.js"></script>
</head>
<body>
<div id="header"></div>
<nav class="navbar navbar-default" id="navLEO"></nav>
<div class="container">
    <div class="page-header">
        <h2>Request Form</h2>
    </div>
    <p>Please fill the below Form and click Submit to request information from social media.</p>

    <div class="row">
        <div class="col-sm-3">
            <ul class="nav nav-pills nav-stacked" id="categoryList">
                <li class="active" id="liCaseDet"><a data-toggle="pill" href="#caseDet">Case Details</a></li>
                <li id="liBasicInfo"><a data-toggle="pill" href="#basicInfo">Basic Information</a></li>
                <li><a data-toggle="pill" href="#contentType">Type of Content</a></li>
                <li><a data-toggle="pill" href="#addInfo">Additional Information</a></li>
                <li><a data-toggle="pill" href="#filter">Filtering</a></li>
            </ul>
        </div>
        <!-- Case details tab -->
        <form id="ReqForm">
        <div class="col-sm-9" >
            <div class="tab-content">
                <div id="caseDet" class="tab-pane fade in active">
                    <h3>Case Details</h3>
                        <div class="row">
                            <div class="form-group col-sm-4">
                                <label for="caseID">Case ID:</label>
                                <input type="text" class="form-control" id="caseID" placeholder="Enter Case Id" name="caseID" onfocus="hideError()"/>
                            </div>
                        </div>
                        <div class="row alert alert-danger collapse" id="caseIDError" ></div>
                        <div class="row">
                            <div class="form-group col-sm-4">
                                <label for="singleSelectCaseType">Case Type</label>
                                <select class="form-control" id="singleSelectCaseType">
                                    <option>Felony</option>
                                    <option>Assault</option>
                                </select>
                            </div>
                        </div>
                </div>
                <!-- Basic info tab -->
                <div id="basicInfo" class="tab-pane fade">
                    <h3>Basic information</h3>
                    <h4>Identifier</h4>
                    <p class="text-primary">Please fill in <kbd>atleast one</kbd> field!!</p>
                    <div class="row alert alert-danger collapse" id="basicInfoError" ></div>
                    <div class="form-group">
                        <label for="suspectUserName">User Name:</label>
                        <input type="text" class="form-control" id="suspectUserName" placeholder="Enter User Name" onfocus="hideError()"/>
                        <div class="row alert alert-danger collapse" id="suspectUserNameError" ></div>
                    </div>
                    <div class="form-group">
                        <label for="inputProfileLink">Profile Link:</label>
                        <input type="text" class="form-control" id="inputProfileLink" placeholder="Enter URL of suspect's profile page" onfocus="hideError()"/>
                    </div>
                    <div class="row">
                        <div class="col-sm-4" >
                            <div class="form-group">
                                <label for="inputFirstName">First Name</label>
                                <input type="text" class="form-control" id="inputFirstName" placeholder="Enter First Name of the suspect" onfocus="hideError()"/>
                            </div>
                        </div>
                        <div class="col-sm-4" >
                            <div class="form-group">
                                <label for="inputMiddleName">Middle Name</label>
                                <input type="text" class="form-control" id="inputMiddleName" placeholder="Enter Middle Name of the suspect" onfocus="hideError()"/>
                            </div>
                        </div>
                        <div class="col-sm-4" >
                            <div class="form-group">
                                <label for="inputLastName">Last Name</label>
                                <input type="text" class="form-control" id="inputLastName" placeholder="Enter Last Name of the suspect" onfocus="hideError()"/>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputEmailAddress">Registered email address</label>
                        <input type="email" id="inputEmailAddress" class="form-control" onfocus="hideError()"/>
                    </div>
                    <div class="form-group">
                        <label for="inputPhoneNo">Registered Phone No</label>
                        <input type="number" id="inputPhoneNo" class="form-control" onfocus="hideError()"/>
                    </div>
                    <hr size="30">
                    <h4>Time Frame</h4>
                    <div class="row alert alert-danger collapse" id="basicTimeError" ></div>
                    <div class="row">
                        <div class='col-sm-6'>
                            <div class="form-group">
                                <label for="dtPickerStartDate">Start Date</label>
                                <div class='input-group date datepicker' id='dtPickerStartDate'>
                                    <input type='text' class="form-control" />
                                    <span class="input-group-addon btn">
									<span class="glyphicon glyphicon-calendar"></span>
								</span>
                                </div>
                            </div>
                        </div>
                        <div class='col-sm-6'>
                            <div class="form-group">
                                <label for="dtPickerEndDate">End Date</label>
                                <div class='input-group date datepicker' id='dtPickerEndDate'>
                                    <input type='text' class="form-control" />
                                    <span class="input-group-addon btn">
									<span class="glyphicon glyphicon-calendar"></span>
								</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Content type tab (subscriber information) -->
                <div id="contentType" class="tab-pane fade">
                    <h3>Type of content</h3>
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="subscriberInfoShares" id="subscriberInfoShares">
                                <label class="form-check-label" for="subscriberInfoShares">
                                    Shares
                                </label>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="subscriberInfoNotes" id="subscriberInfoNotes">
                                <label class="form-check-label" for="subscriberInfoNotes">
                                    Notes
                                </label>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="subscriberInfoWallPostings" id="subscriberInfoWallPostings">
                                <label class="form-check-label" for="subscriberInfoWallPostings">
                                    Wall Postings
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="subscriberInfoFriendList" id="subscriberInfoFriendList">
                                <label class="form-check-label" for="subscriberInfoFriendList">
                                    Friend Listing
                                </label>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="subscriberInfoGroupList" id="subscriberInfoGroupList">
                                <label class="form-check-label" for="subscriberInfoGroupList">
                                    Group Listing
                                </label>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="subscriberInfoVideoList" id="subscriberInfoVideoList">
                                <label class="form-check-label" for="subscriberInfoVideoList">
                                    Video Listing
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Additional Information tab (Other information) -->
                <div id="addInfo" class="tab-pane fade">
                    <h3>Additional information</h3>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" id="chkBoxEventTypePast" value="PastEvent">
                        <label class="form-check-label" for="chkBoxEventTypePast">Past Events</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" id="chkBoxEventTypeFuture" value="FutureEvent">
                        <label class="form-check-label" for="chkBoxEventTypeFuture">Future Events</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="UserPhotos" id="chkBoxUsrPhotos">
                        <label class="form-check-label" for="chkBoxUsrPhotos">
                            User Photos
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="GroupInfo" id="chkBoxGroupInfo">
                        <label class="form-check-label" for="chkBoxGroupInfo">
                            Group Information
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="PvtMsg" id="chkBoxPvtMsg">
                        <label class="form-check-label" for="chkBoxPvtMsg">
                            Private Messages
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="IpLogs" id="chkBoxIPLogs">
                        <label class="form-check-label" for="chkBoxIPLogs">
                            IP Logs
                        </label>
                    </div>
                </div>
                <div id="filter" class="tab-pane fade">
                    <h3>Additional filtering</h3>
                    <div class="row">
                        <div class="col-sm-4">
                            <label for="timePickerStartTime">Start Time</label>
                            <div class="input-group bootstrap-timepicker timepicker">
                                <input id="timePickerStartTime" type="text" class="form-control input-small">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-time"></i></span>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <label for="timePickerEndTime">End Time</label>
                            <div class="input-group bootstrap-timepicker timepicker">
                                <input id="timePickerEndTime" type="text" class="form-control input-small">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-time"></i></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputCommunicants">Communicants</label>
                        <input id="inputCommunicants" type="text" class="form-control"/>
                    </div>
                    <div class="form-group">
                        <label for="inputKeywords">Keywords</label>
                        <input id="inputKeywords" type="text" class="form-control"/>
                    </div>
                    <div class="row">
                        <div class="form-group col-sm-4">
                            <label for="multiSelectKeywordCat">KeywordCategory</label>
                            <select multiple class="form-control" id="multiSelectKeywordCat">
                                <option>Arms Dealing</option>
                                <option>Cyber-bullying</option>
                                <option>Terrorism</option>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-sm-4">
                            <label for="inputLoc">Enter location Zipcode (to get activities in 5 mile radius)</label>
                            <input id="inputLoc" type="text" class="form-control"/>
                        </div>
                    </div>
                </div>
            </div>
        </div>
	</form>
    </div>

    <div class="container text-center">
        <button type="submit" class="btn btn-primary" onclick="validate()">Submit</button>
    </div>
</div>

</body>
</html>